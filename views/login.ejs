<% include partials/header.ejs %>

<h1>Login</h1>
<% if (messages.length > 0) { %>
<div class="invalidInput">Invalid Login</div>
<% } %>
<form method="post">
  <div class="form-group">
    <label class="lbl" for="username">Username:*</label>
    <input name="username" id="username" required />
  </div>
  <div class="form-group">
    <label class="lbl" for="password">Password:*</label>
    <input name="password" id="password" type="password" required />
  </div>
  <button class="loginButton">Login</button>
  <a href="/facebook">
    <img src="/images/facebookSignIn.png" alt="Login with Facebook" />
  </a>
  <center> <hr /> Need access?
  <a href="/register" title="Register">Register</a></center>
</form>

<% include partials/footer.ejs %>