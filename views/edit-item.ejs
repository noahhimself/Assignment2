<% include partials/header.ejs %>
<h1>Purchase Details</h1>

<form method="post">
  <div class="form-group">
    <label for="itemPurchased">Item:</label>
    <input name="itemPurchased" id="itemPurchased" required value="<%= budget.itemPurchased %>" />
  </div>
  <div class="form-group">
    <label for="quantityPurchased">Quantity:</label>
    <select name="quantityPurchased" id="quantityPurchased">
      <% var quantity = ['1', '2', '3'];
      var selected = '';
      for (var i = 0; i<quantity.length; i++) {
        if (quantity[i] == budget.quantityPurchased) {
          selected = ' selected';
        }
        else {
          selected = '';
        }
      %>
      <option<%= selected %>><%= quantity[i]%></option>
      <% } %>
    </select>
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    <input name="price" id="price" required type="number" min="0" value="<%= budget.price %>" />
  </div>
  <button>Save</button>
</form>

<% include partials/footer.ejs %>