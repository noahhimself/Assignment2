<% include partials/header.ejs %>

<h1>Edit Details</h1>
<form method="post">
  <div class="form-group">
    <label class="lbl" for="itemPurchased">Item:*</label>
    <input name="itemPurchased" id="itemPurchased" required value="<%= budget.itemPurchased %>" />
  </div>
  <div class="form-group">
    <label class="lbl" for="quantityPurchased">Quantity:*</label>
    <input name="quantityPurchased" id="quantityPurchased" required type="number" min="0" value="<%= budget.quantityPurchased %>"/>
  </div>
  <div class="form-group">
    <label class="lbl" for="price">Price:*</label>
    <input name="price" id="price" required type="number" min="0" value="<%= budget.price %>" />
    <select name="currency" id="currency">
      <% var CADSelected = ' selected';
         var USDSelected = '';

         if (budget.currency == 'USD'){
           CADSelected = '';
           USDSelected = ' selected';
         }
      %>
      <option<%= CADSelected %>>CAD</option>
      <option<%= USDSelected %>>USD</option>
    </select>
  </div>
  <button class="saveButton">Save</button>
</form>

<% include partials/footer.ejs %>